<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.manju.bluetooth_app.MainActivity">


    <Button
        android:id="@+id/bOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="108dp"
        android:text="ON Bluetooth"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="OFF Bluetooth"
        android:layout_alignBaseline="@+id/bOn"
        android:layout_alignBottom="@+id/bOn"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/viewD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired Devices"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />

    <Button
        android:id="@+id/wOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON wifi"
        android:layout_below="@+id/bOn"
        android:layout_alignStart="@+id/bOn"
        android:layout_marginStart="14dp"
        android:layout_marginTop="63dp" />

    <Button
        android:id="@+id/wOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF wifi"
        android:layout_alignBaseline="@+id/wOn"
        android:layout_alignBottom="@+id/wOn"
        android:layout_alignStart="@+id/bOff" />
</RelativeLayout>
